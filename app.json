{
  "expo": {
    "name": "MacroScope",
    "slug": "macroscope",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "macroscopenative",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.macroscopenative",
      "permissions": [
        "android.permission.health.READ_NUTRITION",
        "android.permission.health.WRITE_NUTRITION",
        "android.permission.health.READ_HYDRATION",
        "android.permission.health.WRITE_HYDRATION",
        "android.permission.health.READ_TOTAL_CALORIES_BURNED",
        "INTERNET",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-health-connect",
        {
          "rationaleActivityRecognition": "We need to see your activity to adjust calorie goals.",
          "rationaleNutrition": "We need access to write your nutrition data to Health Connect so you can view it in other apps."
        }
      ],
      "./plugins/withHealthConnect",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 26,
            "extraMavenRepos": [
              "https://google.bintray.com/exoplayer/"
            ],
            "manifest": {
              "queries": [
                {
                  "intent": [
                    {
                      "action": "androidx.health.ACTION_SHOW_PERMISSIONS_RATIONALE"
                    },
                    {
                      "action": "android.intent.action.VIEW_PERMISSION_USAGE_FOR_PERIOD"
                    }
                  ],
                  "package": [
                    {
                      "name": "com.google.android.apps.healthdata"
                    },
                    {
                      "name": "com.google.android.healthconnect.controller"
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}